<html lang="en">

<% include header %>

<body>

<% include navbar %>

<div role="main" class="container" style="width: 50%;">
    
    <br/><br/>

    <% if (entries.length) { %>

    <h2>-- Entry Listing --</h2><br />

    <!--Adding a link to the view page here-->
    <a href="/view">Here is the View Page</a>
    <a href="/new">Add New Data Entry</a>
    
    <table class="table table-hover">
        
        <thead class="thead-dark">
        
            <tr>
                <th>Name</th>
                <th>Functions</th>
            </tr>
        
        </thead>
        <!--entry data table-->
        <tbody>
            <% entries.forEach(function (entry) { %>
        
            <tr>
                <td><%= entry.name %></td>
                <td><a href="/view/ <%= entry.name %>">VIEW</a></td>
            </tr>

        </tbody>
        
        <% }) %>

    </table>
    
    <% } else { %>
    
        There's nothing here! <a href="/new">Add something!</a>
    
    <% } %>

    <br/>

</div>

<% include scripts %>

</body>
</html>